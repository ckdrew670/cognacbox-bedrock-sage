{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    },
    {
			"type": "vcs",
			"url": "git@github.com:lunar-build/advanced-custom-fields-pro.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lunar-build/gravityforms.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lunar-build/gravityformsmailchimp.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lunar-build/gravityformsrecaptcha.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lunar-build/wpml-multilingual-cms.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lunar-build/wpml-string-translation.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lunar-build/wpml-media-translation.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lunar-build/wpml-acfml.git"
		},
		{
			"type": "vcs",
			"url": "git@github.com:lunar-build/wpml-gravityforms-multilingual.git"
		}
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^1.12",
    "vlucas/phpdotenv": "^5.3",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "5.8.3",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "stoutlogic/acf-builder": "^1.8",
    "wpackagist-plugin/cookie-notice": "^2.1",
    "wpackagist-plugin/disable-comments": "^2.1",
    "wpackagist-plugin/safe-svg": "^1.9",
    "wpackagist-plugin/wordfence": "^7.5",
    "roots/multisite-url-fixer": "^1.1",
    "wpackagist-plugin/wordpress-seo": "^17.2",
    "wpackagist-plugin/cloudflare": "^4.5",
    "wpackagist-plugin/wp-mail-smtp": "^3.0",
    "wpackagist-plugin/redirection": "^5.1",
		"wpackagist-plugin/email-address-encoder": "^1.0.22",
    "wpackagist-plugin/imagify": "^1.10",
    "wp-media/wp-rocket-cli": "^1.3",
    "elliotcondon/advanced-custom-fields-pro": "^5.11",
    "gravityforms/gravityforms": "^2.0",
    "gravityforms/gravityformsmailchimp": "^5.0",
    "gravityforms/gravityformsrecaptcha": "^1.1",
    "wpml/wpml-multilingual-cms": "^4.5",
    "wpml/wpml-string-translation": "^3.2",
    "wpml/wpml-media-translation": "^2.7",
    "wpml/acfml": "^1.9",
    "wpml/gravityforms-multilingual": "^1.6",
    "wpackagist-plugin/relevanssi": "^4.14",
    "wp-media/wp-rocket": "^3.10"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6.0",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
